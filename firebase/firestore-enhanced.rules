rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    function isVerified() {
      return isAuthenticated() && request.auth.token.email_verified == true;
    }
    
    // User profiles - users can only read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
        request.resource.data.keys().hasAll(['lastRequestDate', 'requestCount']) &&
        request.resource.data.requestCount is int &&
        request.resource.data.requestCount >= 0 &&
        request.resource.data.requestCount <= 100;
    }
    
    // Image generation logs - users can only read their own
    match /image_generations/{document} {
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if false; // Only cloud functions can write
    }
    
    // Blocked users - only admins can read
    match /blocked_users/{userId} {
      allow read: if isAdmin();
      allow write: if false; // Only cloud functions can write
    }
    
    // Content violations - only admins can read
    match /content_violations/{document} {
      allow read: if isAdmin();
      allow write: if false; // Only cloud functions can write
    }
    
    // User violations counter - no direct access
    match /user_violations/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      allow write: if false; // Only cloud functions can write
    }
    
    // IP rate limits - no direct access
    match /ip_rate_limits/{ip} {
      allow read: if isAdmin();
      allow write: if false; // Only cloud functions can write
    }
    
    // Daily reports - admins only
    match /daily_reports/{document} {
      allow read: if isAdmin();
      allow write: if false; // Only cloud functions can write
    }
    
    // API keys collection - no client access ever
    match /api_keys/{document} {
      allow read, write: if false;
    }
    
    // Settings collection - read-only for authenticated users
    match /settings/{document} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}